        <!-- فئات الأجهزة -->
        <div class="categories" id="categoriesContainer">
            <!-- سيتم إضافة الفئات ديناميكياً -->
        </div>

        <!-- عرض الأجهزة -->
        <div id="devicesContainer" class="devices-grid">
            <!-- سيتم إضافة الأجهزة ديناميكياً -->
        </div>

        <!-- صفحة تفاصيل الجهاز (مخفية في البداية) -->
