    <script src="devices-database.js"></script>
    <script>
        // دالة لعرض جميع الأجهزة
        function displayDevices(devices) {
            const container = document.getElementById('devicesContainer');
            const detailPage = document.getElementById('deviceDetailPage');
            
            // إخفاء صفحة التفاصيل
            detailPage.style.display = 'none';
            
            // إظهار قائمة الأجهزة
            container.style.display = 'grid';
            
            container.innerHTML = devices.map(device => `
                <div class="device-card fade-in" data-id="${device.id}">
                    <div class="device-image">
                        <img src="placeholder.svg" alt="${device.name}" onerror="this.src='https://via.placeholder.com/300x200/3b82f6/ffffff?text=${encodeURIComponent(device.brand)}'">
                    </div>
                    <div class="device-info">
                        <div class="device-header">
                            <div>
                                <h3 class="device-name">${device.name}</h3>
                                <p class="device-brand">${device.brand}</p>
                            </div>
                            <div class="device-price">${device.price} ${device.currency}</div>
                        </div>
                        
                        <div class="device-rating">
                            <div class="stars">
                                ${'★'.repeat(Math.floor(device.rating))}${'☆'.repeat(5-Math.floor(device.rating))}
                            </div>
                            <span class="rating-value">${device.rating}</span>
                        </div>
                        
                        <div class="device-specs-summary">
                            ${Object.entries(device.specs.الأداء || device.specs.الأداء || {}).slice(0, 3).map(([key, value]) => `
                                <div class="spec-item">
                                    <span class="spec-label">${key}:</span>
                                    <span class="spec-value">${Array.isArray(value) ? value[0] : value}</span>
                                </div>
                            `).join('')}
                        </div>
                        
                        ${device.colors ? `
                            <div class="device-colors">
                                ${device.colors.map(color => `
                                    <div class="color-dot" style="background-color: ${getColorCode(color)}" title="${color}"></div>
                                `).join('')}
                            </div>
                        ` : ''}
                        
                        <div class="device-actions">
                            <button class="btn btn-primary" onclick="showDeviceDetail(${device.id})">
                                <i class="fas fa-info-circle"></i> التفاصيل
                            </button>
                            <button class="btn btn-secondary" onclick="addToCompare(${device.id})">
                                <i class="fas fa-balance-scale"></i> مقارنة
                            </button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // دالة لعرض تفاصيل الجهاز
        function showDeviceDetail(deviceId) {
            const device = electronicDevices.getDeviceById(deviceId);
            if (!device) return;
            
            const container = document.getElementById('devicesContainer');
            const detailPage = document.getElementById('deviceDetailPage');
            
            // إخفاء قائمة الأجهزة
            container.style.display = 'none';
            
            // إظهار صفحة التفاصيل
            detailPage.style.display = 'block';
            detailPage.innerHTML = `
                <button class="btn btn-secondary" onclick="goBackToList()" style="margin-bottom: 20px;">
                    <i class="fas fa-arrow-right"></i> العودة للقائمة
                </button>
                
                <div class="device-detail-header">
                    <div class="device-detail-image">
                        <img src="https://via.placeholder.com/400x400/3b82f6/ffffff?text=${encodeURIComponent(device.brand)}" alt="${device.name}">
                    </div>
                    <div class="device-detail-info">
                        <h1>${device.name}</h1>
                        <p class="device-brand">${device.brand}</p>
                        
                        <div class="device-rating" style="margin: 15px 0;">
                            <div class="stars">
                                ${'★'.repeat(Math.floor(device.rating))}${'☆'.repeat(5-Math.floor(device.rating))}
                            </div>
                            <span class="rating-value">${device.rating}/5</span>
                        </div>
                        
                        <div style="font-size: 2rem; color: var(--primary); margin: 20px 0;">
                            ${device.price} ${device.currency}
                        </div>
                        
                        <div class="device-colors" style="margin: 20px 0;">
                            ${device.colors.map(color => `
                                <div class="color-dot" style="background-color: ${getColorCode(color)}; width: 32px; height: 32px;" title="${color}">
                                    <span style="font-size: 0.7rem; position: absolute; bottom: -20px; color: var(--gray);">${color}</span>
                                </div>
                            `).join('')}
                        </div>
                        
                        <div class="device-actions" style="margin-top: 30px;">
                            <button class="btn btn-primary" style="flex: none; padding: 15px 30px;">
                                <i class="fas fa-shopping-cart"></i> شراء الآن
                            </button>
                            <button class="btn btn-secondary" onclick="addToCompare(${device.id})">
                                <i class="fas fa-balance-scale"></i> إضافة للمقارنة
                            </button>
                        </div>
                    </div>
                </div>
                
                <div style="margin-top: 40px;">
                    ${Object.entries(device.specs).map(([category, specs]) => `
                        <h2 style="margin: 30px 0 20px 0; color: var(--primary); border-bottom: 2px solid var(--primary); padding-bottom: 10px;">${category}</h2>
                        <table class="specs-table">
                            ${Object.entries(specs).map(([key, value]) => `
                                <tr>
                                    <td width="40%"><strong>${key}</strong></td>
                                    <td width="60%">${Array.isArray(value) ? value.join('، ') : value}</td>
                                </tr>
                            `).join('')}
                        </table>
                    `).join('')}
                </div>
            `;
            
            // التمرير لأعلى الصفحة
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

        // دالة للعودة للقائمة
        function goBackToList() {
            const container = document.getElementById('devicesContainer');
            const detailPage = document.getElementById('deviceDetailPage');
            
            detailPage.style.display = 'none';
            container.style.display = 'grid';
        }

        // دالة لإضافة جهاز للمقارنة
        function addToCompare(deviceId) {
            alert(`تم إضافة الجهاز للمقارنة (ID: ${deviceId})`);
            // يمكنك إضافة منطق المقارنة هنا
        }

        // دالة للحصول على كود اللون من اسم اللون
        function getColorCode(colorName) {
            const colorMap = {
                'أسود': '#000000',
                'أبيض': '#ffffff',
                'ذهبي': '#ffd700',
                'أزرق': '#2563eb',
                'رمادي': '#6b7280',
                'بنفسجي': '#8b5cf6',
                'أصفر': '#fbbf24',
                'فضي': '#c0c0c0',
                'رمادي داكن': '#374151'
            };
            return colorMap[colorName] || '#cccccc';
        }

        // دالة لتحميل الفئات
        function loadCategories() {
            const container = document.getElementById('categoriesContainer');
            container.innerHTML = `
                <button class="category-btn active" onclick="filterDevices('الكل')">
                    <i class="fas fa-th-large"></i> الكل
                </button>
                ${electronicDevices.categories.map(cat => `
                    <button class="category-btn" onclick="filterDevices('${cat.name}')">
                        <span>${cat.icon}</span> ${cat.name}
                    </button>
                `).join('')}
            `;
        }

        // دالة لتصفية الأجهزة حسب الفئة
        function filterDevices(category) {
            // تحديث الأزرار النشطة
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            let devices;
            if (category === 'الكل') {
                devices = electronicDevices.getAllDevices();
            } else {
                devices = electronicDevices.getDevicesByCategory(category);
            }
            
            displayDevices(devices);
        }

        // دالة للبحث
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            searchBtn.addEventListener('click', () => {
                const results = electronicDevices.searchDevices(searchInput.value);
                displayDevices(results);
            });
            
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const results = electronicDevices.searchDevices(searchInput.value);
                    displayDevices(results);
                }
            });
        }

        // تهيئة الصفحة عند التحميل
        document.addEventListener('DOMContentLoaded', () => {
            loadCategories();
            displayDevices(electronicDevices.getAllDevices());
            setupSearch();
        });
    </script>
</body>
